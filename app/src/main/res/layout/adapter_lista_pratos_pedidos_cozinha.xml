<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="right"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/mesasazulfundobranco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textPedidoMesaCozinha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido: Mesa 1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textStatusPratoCozinha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: em aberto"
                android:textColor="#F80606"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textInfoPrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info prato" />

        </LinearLayout>

        <TextView
            android:id="@+id/textTimePratoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="0"
            android:text="TextView"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>

