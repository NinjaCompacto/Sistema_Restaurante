<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textPedidoMesaCozinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido: Mesa 1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textStatusPratoCozinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: em aberto"
            android:textColor="#F80606"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textInfoPrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info prato" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"/>
</LinearLayout>

